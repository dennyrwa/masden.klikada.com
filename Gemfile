gem "jekyll-sitemap"             # Membuat sitemap.xml
gem "jekyll-toc"                 # <--- PLUGIN BARU UNTUK DAFTAR ISI

# Ini adalah dependensi yang sering dibutuhkan oleh GitHub Pages
